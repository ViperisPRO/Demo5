<Window x:Class="Eye_save.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eye_save"
        mc:Ignorable="d"
        Title="Eye-Save" Height="400" Width="700" FontFamily="Century Gothic">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel
            Margin="10,0,10,10"
            VerticalAlignment="Bottom" 
            Orientation="Vertical" Height="69">
            <Button 
                Content="Агенты" FontFamily="Century Gothic"
                Click="Agent_Click" Background="#FFB175EE" Height="35" Margin="0,0,-10,0"/>
            
            <Button 
                x:Name="ExitButton"
                Click="ExitButton_Click"
                Content="Выход" FontFamily="Century Gothic" Background="#FFB175EE"  Height="35" Margin="0,0,-10,0"/>

        </StackPanel>
        <Image Source="Eye-save.png" Margin="0,5,2,9" Grid.Column="1"/>
    </Grid>
</Window>
